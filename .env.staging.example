# ============================================
# STAGING ENVIRONMENT
# ============================================
# Purpose: Online testing environment with real integrations
# Used for: Testing with real Supabase, real emails, test payments
# ⚠️ NEVER commit .env.staging with real credentials to Git!
# ============================================

# =====================================================
# ENVIRONMENT CONFIGURATION
# =====================================================
APP_NAME="Salon Management Platform - STAGING"
APP_VERSION="2.0.0"
ENVIRONMENT="staging"
DEBUG=True  # Keep debugging on for staging
API_PREFIX="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=2  # Fewer workers for staging

# =====================================================
# SUPABASE STAGING PROJECT
# =====================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_STAGING_PROJECT/settings/api
SUPABASE_URL="https://YOUR_STAGING_PROJECT_REF.supabase.co"
SUPABASE_ANON_KEY="YOUR_STAGING_ANON_KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR_STAGING_SERVICE_ROLE_KEY"

# Database Direct Connection
# Get from: https://supabase.com/dashboard/project/YOUR_STAGING_PROJECT/settings/database
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.YOUR_STAGING_PROJECT_REF.supabase.co:5432/postgres"

# =====================================================
# JWT & AUTHENTICATION
# =====================================================
JWT_SECRET_KEY="STAGING_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG_CHANGE_THIS"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================================================
# RAZORPAY PAYMENT GATEWAY (TEST MODE)
# =====================================================
# Use TEST keys for staging (rzp_test_*)
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_test_secret_key"
RAZORPAY_WEBHOOK_SECRET="your_test_webhook_secret"

# =====================================================
# EMAIL CONFIGURATION (REAL EMAILS)
# =====================================================
EMAIL_ENABLED=True  # Actually send emails in staging

EMAIL_FROM="staging-noreply@yourdomain.com"
EMAIL_FROM_NAME="Salon Platform - STAGING"

# Gmail SMTP (or your email provider)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-staging-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_TLS=True
SMTP_SSL=False

# =====================================================
# FRONTEND URLS (STAGING DEPLOYMENTS)
# =====================================================
# Update these with your actual staging URLs (Vercel, Netlify, etc.)
FRONTEND_URL="https://staging-salon-app.vercel.app"
ADMIN_PANEL_URL="https://staging-admin-panel.vercel.app"
VENDOR_PORTAL_URL="https://staging-salon-app.vercel.app/vendor"
RM_PORTAL_URL="https://staging-salon-app.vercel.app/rm"

# =====================================================
# CORS SETTINGS
# =====================================================
# Include your staging frontend URLs + localhost for local testing
ALLOWED_ORIGINS="https://staging-salon-app.vercel.app,https://staging-admin-panel.vercel.app,http://localhost:5173,http://localhost:5174"

# =====================================================
# GEOCODING
# =====================================================
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =====================================================
# FILE STORAGE
# =====================================================
STORAGE_BUCKET_PROFILES="profiles"
STORAGE_BUCKET_SALONS="salons"
STORAGE_BUCKET_SERVICES="services"
STORAGE_BUCKET_DOCUMENTS="documents"
MAX_FILE_SIZE_MB=10

# =====================================================
# BUSINESS CONFIGURATION
# =====================================================
DEFAULT_REGISTRATION_FEE=5000
DEFAULT_CONVENIENCE_FEE_PERCENTAGE=5
DEFAULT_RM_SCORE_PER_APPROVAL=10
DEFAULT_PLATFORM_COMMISSION=10
MAX_BOOKING_ADVANCE_DAYS=30
CANCELLATION_WINDOW_HOURS=24

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL="INFO"
LOG_FILE="logs/staging.log"

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=2000
