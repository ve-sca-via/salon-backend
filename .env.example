# =====================================================
# ENVIRONMENT CONFIGURATION
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values (NEVER commit .env to git!)
# 3. Keep .env.example updated with new variables (with dummy values)
# 
# ⚠️ SECURITY: Never commit sensitive values to git!
# =====================================================

# Application Settings
APP_NAME="Salon Management Platform"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
API_PREFIX="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:5174"

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# =====================================================
# JWT & AUTHENTICATION
# =====================================================
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================================================
# RAZORPAY PAYMENT GATEWAY
# =====================================================
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_secret_key"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# =====================================================
# EMAIL CONFIGURATION
# =====================================================
# Set to True to actually send emails, False to just log them
EMAIL_ENABLED=False

EMAIL_FROM="noreply@salonplatform.com"
EMAIL_FROM_NAME="Salon Management Platform"

# SMTP Settings
# For local dev with Mailpit: SMTP_HOST=localhost, SMTP_PORT=1025, SMTP_TLS=False, SMTP_SSL=False
# For production (Gmail): SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_TLS=True
# For production (SendGrid): SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587, SMTP_TLS=True
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=True
SMTP_SSL=False

# =====================================================
# FRONTEND URLS
# =====================================================
FRONTEND_URL="http://localhost:5173"
ADMIN_PANEL_URL="http://localhost:5174"
VENDOR_PORTAL_URL="http://localhost:5173/vendor"
RM_PORTAL_URL="http://localhost:5173/rm"

# =====================================================
# GEOCODING (Address → Coordinates)
# =====================================================
# Google Maps API Key (optional - falls back to free OpenStreetMap if not set)
# Get your key: https://developers.google.com/maps/documentation/geocoding/get-api-key
GOOGLE_MAPS_API_KEY=""

# =====================================================
# FILE STORAGE (Supabase Storage)
# =====================================================
STORAGE_BUCKET_PROFILES="profiles"
STORAGE_BUCKET_SALONS="salons"
STORAGE_BUCKET_SERVICES="services"
STORAGE_BUCKET_DOCUMENTS="documents"
MAX_FILE_SIZE_MB=10

# =====================================================
# BUSINESS CONFIGURATION
# =====================================================
DEFAULT_REGISTRATION_FEE=5000
DEFAULT_CONVENIENCE_FEE_PERCENTAGE=5
DEFAULT_RM_SCORE_PER_APPROVAL=10
DEFAULT_PLATFORM_COMMISSION=10
MAX_BOOKING_ADVANCE_DAYS=30
CANCELLATION_WINDOW_HOURS=24

# =====================================================
# REDIS (Optional - for caching & sessions)
# =====================================================
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=3600

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =====================================================
# GOOGLE MAPS (for location services)
# =====================================================
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =====================================================
# SENTRY (Error Tracking - Optional)
# =====================================================
SENTRY_DSN=""

# =====================================================
# TWILIO (SMS - Optional)
# =====================================================
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
